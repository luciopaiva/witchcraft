{
  "name": "Witchcraft: JS/CSS injector",
  "short_name": "Witchcraft",
  "manifest_version": 2,
  "version": "2.4.0",
  "description": "Witchcraft loads custom Javascript and CSS directly from a folder in your file system. Think GreaseMonkey for developers.",
  "icons": {
    "16": "witch-16.png",
    "24": "witch-24.png",
    "32": "witch-32.png",
    "64": "witch-64.png",
    "128": "witch-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "witch-16.png",
      "24": "witch-24.png",
      "32": "witch-32.png",
      "64": "witch-64.png",
      "128": "witch-128.png"
    },
    "default_title": "Witchcraft",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "all_frames": true,
    "run_at":     "document_start",
    "matches":    ["http://*/*", "https://*/*"],
    "js":         ["content-script.js"]
  }],
  "background": {
    "scripts": ["witchcraft.js", "background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs"
  ]
}