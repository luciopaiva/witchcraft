{
  "name": "witchcraft",
  "version": "3.2.0",
  "description": "![Witchcraft](docs/title.png)",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:test": "vite build --mode test",
    "test:unit": "npm run build && mocha 'test/**/*.js' --ignore 'test/integration/**' --recursive",
    "test:coverage": "c8 -r lcov -r text mocha 'test/**/*.js' --ignore 'test/integration/**' --recursive",
    "test:integration": "npm run build:test && mocha test/integration/integration.js --timeout 30000",
    "test": "npm run test:unit && npm run test:integration",
    "test:new": "vitest",
    "coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciopaiva/witchcraft.git"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luciopaiva/witchcraft/issues"
  },
  "homepage": "https://github.com/luciopaiva/witchcraft#readme",
  "devDependencies": {
    "c8": "^10.1.3",
    "mocha": "^11.7.2",
    "nyc": "^17.1.0",
    "puppeteer": "^24.17.1",
    "sinon": "^15.1.0",
    "sinon-chrome": "^3.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vite-plugin-static-copy": "^3.1.2",
    "vitest": "^3.2.4"
  }
}
